<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_catalogo_kanban" model="ir.ui.view">
        <field name="name">catalogo.catalogo.kanban</field>
        <field name="model">catalogo.catalogo</field>
        <field name="arch" type="xml">
            <kanban>
                <img src='/om_catalogo/static/src/img/air_gear.jpg' style="max-height: 50px;"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_image">
                            <t t-if="record.image.raw_value">
                                <img t-att-src="kanban_image('catalogo.catalogo', 'image_medium', record.id.value)"/>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_catalogo_catalogo" model="ir.actions.act_window">
        <field name="name">Catalogo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">catalogo.catalogo</field>
        <field name="view_mode">kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <img src='/om_catalogo/static/src/img/air_gear.jpg' style="max-height: 50px;"/>
        </field>
    </record>
</odoo>