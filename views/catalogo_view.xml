<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_catalogo_kanban" model="ir.ui.view">
        <field name="name">catalogo.catalogo.kanban</field>
        <field name="model">catalogo.catalogo</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="image"/>
                 <templates>
                    <t t-name="kanban-box">
                       
                            <div class="oe_kanban_details">
                                <field name="image" widget="image" class="oe_avatar" options="{'size': [150, 250]}"/>
                                
                            </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_catalogo_catalogo" model="ir.actions.act_window">
        <field name="name">Catalogo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">catalogo.catalogo</field>
        <field name="view_mode">kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create 
            </p>
        </field>
    </record>
</odoo>